{
	float3 retColor;
	retColor = condition ? colorA : colorB;

	return retColor;
}
		]]>
		</source>
	</implementation>
	<implementation render="OGSRenderer" language="GLSL" lang_version="3.0">
		<function_name val="colorConditionBase" />
		<source>
		<![CDATA[
vec3 colorConditionBase(vec3 colorA, vec3 colorB, bool condition)
{
	vec3 retColor;
	retColor = condition ? colorA : colorB;

	return retColor;
}
		]]>
		</source>
	</implementation>
	</implementation>
</fragment>
