global proc createPolySoccerBallProperties()
{
	// Global template variables for form spacing
	global int $gToolOptionBoxTemplateDescriptionMarginWidth;
	global int $gToolOptionBoxTemplateFrameSpacing;
	
	global float $gSoccerBallRatio;
	
	string $parent = `toolPropertyWindow -q -location`;
	setParent $parent;
	
	setUITemplate -pushTemplate ToolOptionBoxTemplate;

	string $type = "createPolySoccerBall";
	string $title = (uiRes("m_createPolySoccerBallProperties.kCreatePolySoccerBallToolSettings"));

	string $axis = `upAxis -q -axis`;
	
	int $axisButton = 1;
	
	if ($axis == "z")
		$axisButton = 2;
	else
		$axisButton = 1;

	// Form layout
	$parent = `formLayout $type`;

		// Description frame
		string $descriptionFrame = 
		`frameLayout -label (uiRes("m_createPolySoccerBallProperties.kDescriptionFrame")) -mw $gToolOptionBoxTemplateDescriptionMarginWidth`;

			text -label (uiRes("m_createPolySoccerBallProperties.kCreatePolySoccerBallToolDescApp")) createPolySoccerBallToolDescLabel;			
	
		setParent $parent;


			// Settings frame
		string $settingsFrame = 
		`frameLayout -label (uiRes("m_createPolySoccerBallProperties.kCreateSettingsFrame"))`;
			columnLayout;

				checkBoxGrp -label1 (uiRes("m_createPolySoccerBallProperties.kCreateUVs"))
					-label (uiRes("m_createPolySoccerBallProperties.kTextureMapping"))
					-value1 true
					-enable true
					createPolySoccerBallCreateUVCheckBox;
				
				checkBoxGrp -label1 (uiRes("m_createPolySoccerBallProperties.kNormalize")) 
					-value1 true
					-enable true
					createPolySoccerBallNormalizeCheckBox;
				
				radioButtonGrp 
					-numberOfRadioButtons 2
					-label1 (uiRes("m_createPolySoccerBallProperties.kCollectively")) 
					-label2 (uiRes("m_createPolySoccerBallProperties.kEachFaceSep"))
					-select 1
					-enable true
					-vertical
					createPolySoccerBallNormalizeTypeRadioButton;
				
				checkBoxGrp -label1 (uiRes("m_createPolySoccerBallProperties.kPreserveAR"))
					-value1 true
					-enable true
					createPolySoccerBallPreserveAspectRatioCheckBox;
						
		setParent $parent;		
		
		// Single-click Settings frame
		string $singleClickSettingsFrame = 
		`frameLayout -label (uiRes("m_createPolySoccerBallProperties.kSettingsFrame"))`;
			columnLayout;

				floatSliderGrp -field true -l (uiRes("m_createPolySoccerBallProperties.kRadius"))
					-min 0.01 -max 10.0 -v 1.0 -fieldMaxValue 10000 createPolySoccerBallRadiusSlider;

				floatSliderGrp -field true -l (uiRes("m_createPolySoccerBallProperties.kSideLength"))
					-min 0.01 -max 10.0 -v $gSoccerBallRatio -fieldMaxValue 1000 createPolySoccerBallSideLengthSlider;

				radioButtonGrp -label (uiRes("m_createPolySoccerBallProperties.kAxis"))
					-numberOfRadioButtons 3
					-label1 (uiRes("m_createPolySoccerBallProperties.kXAxis"))
					-label2 (uiRes("m_createPolySoccerBallProperties.kYAxis"))
					-label3 (uiRes("m_createPolySoccerBallProperties.kZAxis"))
					-enable true
					-select $axisButton
					createPolySoccerBallAxisRadioButton;
					
	setParent ..;

	// Attach Description/Settings frames to form layout
	formLayout -e
		-af $descriptionFrame "top" $gToolOptionBoxTemplateFrameSpacing
		-af $descriptionFrame "left" $gToolOptionBoxTemplateFrameSpacing
		-af $descriptionFrame "right" $gToolOptionBoxTemplateFrameSpacing
		-an $descriptionFrame "bottom"

		-ac $singleClickSettingsFrame "top" $gToolOptionBoxTemplateFrameSpacing $descriptionFrame
		-af $singleClickSettingsFrame "left" $gToolOptionBoxTemplateFrameSpacing
		-af $singleClickSettingsFrame "right" $gToolOptionBoxTemplateFrameSpacing
		-an $singleClickSettingsFrame "bottom" 
		
		-ac $settingsFrame "top" $gToolOptionBoxTemplateFrameSpacing $singleClickSettingsFrame
		-af $settingsFrame "left" $gToolOptionBoxTemplateFrameSpacing
		-af $settingsFrame "right" $gToolOptionBoxTemplateFrameSpacing
		-an $settingsFrame "bottom" 

	$parent;

	setUITemplate -popTemplate;
}
