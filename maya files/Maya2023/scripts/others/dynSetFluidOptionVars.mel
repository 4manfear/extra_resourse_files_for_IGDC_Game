global proc setFluidEmitterOptionVars (int $setFactorySettings)
{
	optionVar -init $setFactorySettings -category "Dynamics.Fluids.Emitter"
		-sv flEmitterName ""
		-iv flEmitterParenting 1
		-sv flEmitterTypeOM (uiRes("m_dynCreateFluidLayout.kOmni"))
		-fv flEmitterDensityRate 1.0
		-fv flEmitterHeatRate 1.0
		-fv flEmitterFuelRate 1.0
		-fv flEmitterFluidDropoff 2.0
		-iv flEmitterCycleOM 1
		-iv flEmitterCycleInterval 1
		-fv flEmitterMaxDistance 1.0
		-fv flEmitterMinDistance 0.0
		-iv flEmitterVolumeShapeOM 1
		-fv flEmitterVolumeOffsetX 0.0
		-fv flEmitterVolumeOffsetY 0.0
		-fv flEmitterVolumeOffsetZ 0.0
		-fv flEmitterVolumeSweep 360.0
		-fv flEmitterTorusSectionRadius 0.5
		;
}

