global proc setExtendFluidOptionVars( int $setFactorySettings )
{
	optionVar -init $setFactorySettings -category "Dynamics.Fluids.Extend Fluid"
		-iv "extendFluidRebuildIC" 1
		-iv "extendFluidMinY" 0
		-iv "extendFluidMaxY" 2
		-iv "extendFluidMinX" 0
		-iv "extendFluidMaxX" 0
		-iv "extendFluidMinZ" 0
		-iv "extendFluidMaxZ" 0
		;
}

global proc setResampleFluidOptionVars( int $setFactorySettings )
{
	optionVar -init $setFactorySettings -category "Dynamics.Fluids.Edit Fluid Resolution"
		-iv "resampleFluidRebuildIC" 1
		-iv "resampleFluidY" 10
		-iv "resampleFluidX" 10
		-iv "resampleFluidZ" 10
		;
}

