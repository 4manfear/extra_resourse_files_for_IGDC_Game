//
//	Description:
//		Toggles the display of dynamic constraint nodes in the AE.
//
global proc performNucleusDisplayDynamicConstraintNodes()
{
	optionVar -intValue nucleusShowDynamicConstraintNodes (!`optionVar -query nucleusShowDynamicConstraintNodes`);
	global string $gAEFocusNode;
	if( $gAEFocusNode != "" ){
		updateAE $gAEFocusNode;
	}
	global string $gNClothDisplayMenu;
	if( $gNClothDisplayMenu != "" && `menu -exists $gNClothDisplayMenu` ){
		string $oldParent = `setParent -menu -query`;
		setParent -menu $gNClothDisplayMenu;
		menuItem -edit -checkBox `optionVar -query nucleusShowDynamicConstraintNodes` dynamicConstraintNodesItem;
		setParent -menu $oldParent;
	}
}
