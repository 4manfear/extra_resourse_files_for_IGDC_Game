//
//	Description:
//		Toggles the display of nComponent nodes in the AE.
//
global proc performNucleusDisplayNComponentNodes()
{
	optionVar -intValue nucleusShowNComponentNodes (!`optionVar -query nucleusShowNComponentNodes`);
	global string $gAEFocusNode;
	if( $gAEFocusNode != "" ){
		updateAE $gAEFocusNode;
	}
	global string $gNClothDisplayMenu;
	if( $gNClothDisplayMenu != "" && `menu -exists $gNClothDisplayMenu` ){
		string $oldParent = `setParent -menu -query`;
		setParent -menu $gNClothDisplayMenu;
		menuItem -edit -checkBox `optionVar -query nucleusShowNComponentNodes` nComponentNodesItem;
		setParent -menu $oldParent;
	}
}
