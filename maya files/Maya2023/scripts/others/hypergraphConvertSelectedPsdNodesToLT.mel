// Description:
//
// This function converts the selected psdFileTex nodes to a Layered
// texture network.
//

global proc hypergraphConvertSelectedPsdNodesToLT()
{
	source "hypergraphConvertPsdToLTNetwork.mel";

	string $selection[] = eval("ls -selection");
	int $index, $psdNodeCount = 0;

	for( $index = 0; $index < size( $selection) ; $index++)
	{		
		string $node = $selection[$index];
		if( (nodeType ($node)) == "psdFileTex" ) {
			hypergraphConvertPsdToLTNetwork( $node );
			$psdNodeCount++;
		}
	}
	
	if( $psdNodeCount == 0 )
	{
		error ((uiRes("m_hypergraphConvertSelectedPsdNodesToLT.kNoPSDSelected")));
	}
}
