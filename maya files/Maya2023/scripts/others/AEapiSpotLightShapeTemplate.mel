global proc AEapiSpotLightShapeTemplate( string $nodeName )
{
	AEswatchDisplay $nodeName;
	editorTemplate -beginScrollLayout;

	editorTemplate -beginLayout (uiRes("m_AEapiSpotLightShapeTemplate.kGeneralLightingAttr")) -collapse 0;
		editorTemplate -addControl "color";
		editorTemplate -addControl "intensity";
		editorTemplate -addControl "exposure";
		editorTemplate -addControl "emitDiffuse";
		editorTemplate -addControl "emitSpecular";
		editorTemplate -addControl "decayRate";
	editorTemplate -endLayout;

	editorTemplate -beginLayout (uiRes("m_AEapiSpotLightShapeTemplate.kShadowAttr")) -collapse 0;
		editorTemplate -addControl "useDepthMapShadows";
		editorTemplate -addControl "useRayTraceShadows";
		editorTemplate -addControl "shadowColor";
		editorTemplate -addControl "dmapResolution";
	editorTemplate -endLayout;

	editorTemplate -beginLayout (uiRes("m_AEapiSpotLightShapeTemplate.kSpotAttr")) -collapse 0;
		editorTemplate -addControl "coneAngle";
		editorTemplate -addControl "penumbraAngle";
		editorTemplate -addControl "dropoff";
		editorTemplate -addControl "locatorScale";
	editorTemplate -endLayout;


	// include/call base class/node attributes
	AEshapeTemplate $nodeName;

	editorTemplate -addExtraControls;
	editorTemplate -endScrollLayout;
}
