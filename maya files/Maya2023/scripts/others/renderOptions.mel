//	Description: General render options interface.
//
global proc renderOptions()
{
    string $curRenderer = currentRenderer();
	string $cmd = `renderer -q -renderOptionsProcedure $curRenderer`;

    if ($cmd == "")
    {
        string $warningMessage = (uiRes("m_renderOptions.kWarningMessage"));  
        $warningMessage = `format -stringArg $curRenderer $warningMessage`;  
        warning ($warningMessage); 
        return;
    }
    eval($cmd);
}
