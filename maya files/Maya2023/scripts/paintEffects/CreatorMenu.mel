// initialize global variables used by creator
source creatorGlobalVars;
{
	global string $gMainWindow;
	setParent $gMainWindow;

	global string $gMainCreatorMenu = "mainCreatorMenu";

	string $menu = `menu -p $gMainWindow -l (uiRes("m_CreatorMenu.kPaintEffects"))
		-tearOff true -aob 1 
		-familyImage "menuIconPaintEffects.png"  
		$gMainCreatorMenu`;	
	menu -e -pmc ("buildCreatorMenu(\"" + $menu + "\")") $gMainCreatorMenu;

	hotBox -um;    // rebuild the hotbox with the new menu
	updateMenuModeUI;

	// 	// When these events are received, then call the appropriate update proc.
