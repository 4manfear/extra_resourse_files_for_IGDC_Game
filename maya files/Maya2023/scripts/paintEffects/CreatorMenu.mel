	//  	scriptJob -p $gMainDisplayMenu 
	// 		-e "gridDisplayChanged" "if (!`exists gridMenuUpdate`) {source buildDisplayMenu;} gridMenuUpdate;";
	// 	scriptJob -p $gMainDisplayMenu 
	// 		-e "axisAtOriginChanged" "if (!`exists originAxesMenuUpdate`) {source buildDisplayMenu;} originAxesMenuUpdate;";	
}
