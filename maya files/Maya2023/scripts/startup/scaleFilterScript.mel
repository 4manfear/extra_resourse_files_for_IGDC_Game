//
//  Description:
//      This is an itemFilterAttr filter script which will
//	return true if the specified attribute is a scale attribute
//
//  Input Arguments:
//      string $nodeName		The name of the node being tested
//		string $attribute		The attribute being tested
//
//  Return Value:
//      (int) 1 if this a scale attribute, 0 otherwise.
//

global proc int
scaleFilterScript (string $nodeName, string $attribute)
{
	int $result = 0;

	switch ($attribute) {
	case "scale":
	case "scaleX":
	case "scaleY":
	case "scaleZ":
		$result = 1;
		break;
	}
	return ($result);
}
