proc modEditSurfacesMenuLabel( )
{
	if( `optionVar -q modelWithToolDuplicateSurface` ) {
		menuItem -e
		  -label (uiRes("m_ModEditSurfacesMenu.kDuplicateNurbsPatchesTool")) 
