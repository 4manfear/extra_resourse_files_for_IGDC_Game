		  duplSrfItem;
		menuItem -e
		  -annotation (uiRes("m_ModEditSurfacesMenu.kDuplicateNurbsPatchesToolOptionsAnnot"))
		  duplSrfDialog;
	}
	else {
		menuItem -e
		  -label (uiRes("m_ModEditSurfacesMenu.kDuplicateNurbsPatches")) 
		  -annotation (uiRes("m_ModEditSurfacesMenu.kDuplicateNurbsPatchesAnnot"))
		  duplSrfItem;
