			-annotation (uiRes("m_ModEditSurfacesMenu.kExtendSurfacesAnnot")) 
			extendSrfItem;
		menuItem -e
			-annotation (uiRes("m_ModEditSurfacesMenu.kExtendSurfacesOptionsAnnot")) 
