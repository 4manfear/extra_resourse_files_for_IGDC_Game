            -annotation (uiRes("m_ModEditSurfacesMenu.kFreeformFilletToolAnnot"))
			freeFormFilletItem ;
        menuItem -e
            -annotation (uiRes("m_ModEditSurfacesMenu.kFreeformFilletToolOptionsAnnot")) 
