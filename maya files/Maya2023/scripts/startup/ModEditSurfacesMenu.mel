	}
	else {
		menuItem -e
			-label (uiRes("m_ModEditSurfacesMenu.kOffsetSurfaces")) 
			-annotation (uiRes("m_ModEditSurfacesMenu.kOffsetSurfacesAnnot")) 
			surfOffsetItem;
		menuItem -e
			-annotation (uiRes("m_ModEditSurfacesMenu.kOffsetSurfacesOptionsAnnot")) 
