//
//  Procedure Name:
//	AEjointLatticeTemplate
//
//  Description Name;
//	Creates the attribute editor controls for the jointLattice Node
//
//  Input Value:
//	nodeName 
//
//  Output Value:
//	None
// 

global proc AEjointLatticeTemplate ( string $nodeName )
{
	editorTemplate -beginScrollLayout;
		editorTemplate -beginLayout (uiRes("m_AEjointLatticeTemplate.kJointLatticeAttributes"))  -collapse 0;
			editorTemplate -addControl "creasing";
			editorTemplate -addControl "rounding";
			editorTemplate -addControl "lengthIn";
			editorTemplate -addControl "lengthOut";
			editorTemplate -addControl "widthLeft";
			editorTemplate -addControl "widthRight";
			editorTemplate -addControl "bendVector";
			editorTemplate -addControl "bendMagnitude";
		editorTemplate -endLayout;
		// include/call base class/node attributes
		AEgeometryFilterCommon $nodeName;
		AEgeometryFilterInclude $nodeName;

	editorTemplate -addExtraControls;
	editorTemplate -endScrollLayout;
}
