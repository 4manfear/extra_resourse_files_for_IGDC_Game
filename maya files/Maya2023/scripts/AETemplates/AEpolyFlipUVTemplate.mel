///////////////////////////////////////////////////////////////////////////////
//
//  Description:
//  Attribute editor template layout for polyFlipUV node
//
///////////////////////////////////////////////////////////////////////////////

global proc AEpolyFlipUVTemplate(string $nodeName)
{
	editorTemplate -beginScrollLayout;
		editorTemplate -beginLayout (uiRes("m_AEpolyFlipUVTemplate.kFlipUV")) -collapse 0;

			editorTemplate -addControl "flipType";
			editorTemplate -addControl "local";

			// suppressed attributes
			editorTemplate -suppress "inputComponents";
			editorTemplate -suppress "worldSpace";

		editorTemplate -endLayout;

	editorTemplate -addExtraControls;
	editorTemplate -endScrollLayout;
}
