//  Procedure Name:
//	AEdeformWaveTemplate
//
//  Description:
//	Creates  attribute editor controls the deformWave node
//
//  Input Value:
//	nodeName
//
//  Output Value:
//	None
//


global proc AEdeformWaveTemplate ( string $nodeName )
{
	editorTemplate -beginScrollLayout;

	// suppress attributes that are connected by default
		editorTemplate -suppress "minRadius";
		editorTemplate -suppress "maxRadius";		
		editorTemplate -suppress "amplitude";
		editorTemplate -suppress "wavelength";
		editorTemplate -suppress "dropoff";
		editorTemplate -suppress "dropoffPosition";		
		editorTemplate -suppress "offset";

	AEdeformFuncCommon $nodeName;

	editorTemplate -addExtraControls;
	editorTemplate -endScrollLayout;
}



