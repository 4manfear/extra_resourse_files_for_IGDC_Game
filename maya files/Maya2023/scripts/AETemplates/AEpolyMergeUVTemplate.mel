///////////////////////////////////////////////////////////////////////////////
//
//  Description:
//  Attribute editor template layout for polyAutoProj nodes
//
///////////////////////////////////////////////////////////////////////////////

global proc AEpolyMergeUVTemplate(string $nodeName)
{
	editorTemplate -beginScrollLayout;
	editorTemplate -beginLayout (uiRes("m_AEpolyMergeUVTemplate.kAutomaticProjection")) -collapse 0;

	editorTemplate -addControl "distance";

	editorTemplate -endLayout;

	// suppressed attributes
	editorTemplate -suppress "inputComponents";

	editorTemplate -addExtraControls;
	editorTemplate -endScrollLayout;
}
