///////////////////////////////////////////////////////////////////////////////
//
//  Description:
//  Attribute editor template layout for polyCrease nodes
//
///////////////////////////////////////////////////////////////////////////////

global proc AEpolyCreaseTemplate(string $nodeName)
{
	editorTemplate -beginScrollLayout;
	editorTemplate -beginLayout (uiRes("m_AEpolyCreaseTemplate.kPolygonCreaseAttributes")) -collapse 0;

	editorTemplate -label (uiRes("m_AEpolyCreaseTemplate.kEdgeCreaseLabel")) -addControl "crease";
	editorTemplate -label (uiRes("m_AEpolyCreaseTemplate.kVertexCreaseLabel")) -addControl "creaseVertex";

	editorTemplate -addControl "operation";

	editorTemplate -addControl "worldSpace";

	editorTemplate -endLayout;

	AEpolyModifierInclude $nodeName;

	// suppressed attributes
	editorTemplate -suppress "inputComponents";

	editorTemplate -addExtraControls;
	editorTemplate -endScrollLayout;
}
