#version 330 core

const uint pattern = 0xF00FF00Fu;
const float factor = 0.4f;

in GS_OUT
{
	vec4  color;
	float stippleLineCoord;
} ps_input;

out vec4 color;

void main()
{
	uint bit = uint( round( ps_input.stippleLineCoord / factor) ) & 31U;
	if((pattern & (1U<<bit)) == 0U)
		discard;

	color = ps_input.color;
}
